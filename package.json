{
  "name": "node-api-boilerplate",
  "version": "0.0.1",
  "scripts": {
    "start": "node -r @std/esm -r dotenv/config .",
    "dev": "nodemon -e js,pug,css -i './**/*.test.js' -r @std/esm -r dotenv/config .",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "ava",
    "coverage": "nyc npm test && nyc report"
  },
  "engines": {
    "node": ">=8.9.4"
  },
  "@std/esm": "cjs",
  "dependencies": {
    "@std/esm": "^0.21.7",
    "ajv": "^6.2.1",
    "axios": "^0.17.1",
    "bluebird": "^3.5.1",
    "body-parser": "~1.18.2",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "deepmerge": "^2.0.1",
    "dotenv": "^5.0.0",
    "express": "~4.15.5",
    "mongoose": "^5.0.6",
    "path": "^0.12.7",
    "pug": "^2.0.0",
    "serve-favicon": "^2.4.5",
    "swagger-doc-helper": "^1.0.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "nodemon": "^1.14.12",
    "nyc": "^11.4.1",
    "sinon": "^4.4.2",
    "supertest": "^3.0.0"
  },
  "lock": false,
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "indent": [
        0,
        4
      ],
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": 0,
      "linebreak-style": 0,
      "object-curly-newline": 0,
      "max-len": [
        1,
        150,
        4,
        {
          "ignorePattern": "\\s*<"
        }
      ]
    }
  },
  "ava": {
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "compileEnhancements": false,
    "require": [
      "@std/esm"
    ]
  }
}
